  <script>
    /* ------------------- سفارشی‌سازی سریع -------------------
       برای تغییر اطلاعات، می‌تونی مستقیم داخل HTML مقدارها را عوض کنی
       یا از اینجا تغییر بدی. مثال زیر را با اطلاعات خودت جایگزین کن.
    -------------------------------------------------------- */
    const profile = {
      fullName: "ایلیا اسدی",
      role: "توسعه‌دهندهٔ وب",
      bio: "من روی فرانت‌اند و تجربهٔ کاربری کار می‌کنم. عاشق رابط‌های ساده و سریع هستم.",
      email: "ali@example.com",
      location: "تربت، ایران",
      phone: "+98 912 000 0000",
      avatar: "https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=800&auto=format&fit=crop",
      github: "https://github.com/yourusername",
      linkedin: "https://www.linkedin.com/in/yourprofile",
      twitter: "https://twitter.com/yourhandle",
      resume: "#" // اگر فایل رزومه داری لینک فایل را اینجا بذار
    };

    // apply profile to page
    document.getElementById('fullName').textContent = profile.fullName;
    document.getElementById('role').textContent = profile.role;
    document.getElementById('bio').textContent = profile.bio;
    document.getElementById('email').textContent = profile.email;
    document.getElementById('location').textContent = profile.location;
    document.getElementById('phone').textContent = profile.phone;
    document.getElementById('avatarImg').src = profile.avatar;
    document.getElementById('heroName').textContent = profile.fullName;
    document.getElementById('heroSub').textContent = profile.bio;
    document.getElementById('link-github').href = profile.github;
    document.getElementById('link-linkedin').href = profile.linkedin;
    document.getElementById('link-twitter').href = profile.twitter;
    document.getElementById('downloadCV').href = profile.resume;
    document.title = profile.fullName + " — صفحهٔ شخصی";

    // contact form (محلی)
    function handleContact(e){
      e.preventDefault();
      const name = document.getElementById('cf-name').value;
      const email = document.getElementById('cf-email').value;
      const msg = document.getElementById('cf-msg').value;
      alert(`پیام ارسال شد!\n\nنام: ${name}\nایمیل: ${email}\n\nمتن:\n${msg}`);
      resetForm();
    }
    function resetForm(){
      document.getElementById('contactForm').reset();
    }

    // helper
    function scrollToSection(id){
      const el = document.getElementById(id);
      if(el) el.scrollIntoView({behavior:'smooth', block:'start'});
    }
  </script>
